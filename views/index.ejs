<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %>></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('partials/sidebar_nav.ejs') %>

  <main>
    <h1><%= title %></h1>
    <% if (locals.categories) { %>
      <ul>
        <% categories.forEach((category) => { %>
          <li><a href="/inventory/categories/<%= category.id %>"><%= category.name %></a></li>
          <% if (locals.items) { %>
            <ul>
              <% items.filter((item) => item.category_id == category.id).forEach((el) => { %>
                <li><a href="/inventory/items/<%= el.id %>"><%= el.name %></a></li>
              <% }) %>
            </ul>
          <% } %>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>